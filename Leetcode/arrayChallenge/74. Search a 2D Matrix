```
class Solution {
public:
    bool searchMatrix(vector<vector<int>>& matrix, int target) {
        unordered_map<int,int>mat;
        
        int r=matrix.size();
        //cout<<r<<endl;
        int c=matrix[0].size();
        //cout<<c<<endl;
        for(int i=0;i<r;i++)
        {
            for(int j=0;j<c;j++)
            {
                mat[matrix[i][j]]++;
            }
        }
        
    auto it=mat.find(target);
        if(it!=mat.end())
        {
            return true;
        }
        return false;
        
    }
};
```
